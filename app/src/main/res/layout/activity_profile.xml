<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_baseline_man_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:text="User Name"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <TextView
        android:id="@+id/profile_rollnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="000000"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/profile_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Branch"
        app:layout_constraintTop_toBottomOf="@+id/profile_rollnumber"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/profile_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="X Year"
        app:layout_constraintTop_toBottomOf="@+id/profile_branch"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/profile_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0000000000"
        app:layout_constraintTop_toBottomOf="@+id/profile_year"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/profile_hostel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="HostelName"
        app:layout_constraintTop_toBottomOf="@+id/profile_contact"
        tools:layout_editor_absoluteX="140dp" />

    <TextView
        android:id="@+id/profile_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="000"
        app:layout_constraintTop_toBottomOf="@+id/profile_hostel"
        tools:layout_editor_absoluteX="140dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="100dp" />

    <ImageView
        android:id="@+id/icon_rollnumber"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_rollnumber"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_baseline_numbers_24"
        tools:layout_editor_absoluteY="262dp" />

    <ImageView
        android:id="@+id/icon_branch"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_branch"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_baseline_collections_bookmark_24"
        tools:layout_editor_absoluteY="298dp" />

    <ImageView
        android:id="@+id/icon_year"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_year"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_baseline_library_books_24"
        tools:layout_editor_absoluteY="333dp" />

    <ImageView
        android:id="@+id/icon_contact"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_contact"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_baseline_call_24"
        tools:layout_editor_absoluteY="369dp" />

    <ImageView
        android:id="@+id/icon_hostel"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_hostel"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_baseline_home_24"
        tools:layout_editor_absoluteY="404dp" />

    <ImageView
        android:id="@+id/icon_room"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toStartOf="@+id/profile_room"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:srcCompat="@drawable/ic_baseline_bedroom_child_24"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="478dp" />

    <TextView
        android:id="@+id/profile_recent_login"
        android:layout_width="163dp"
        android:layout_height="47dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Recent Login Activity"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <TextView
        android:id="@+id/profile_logout"
        android:layout_width="163dp"
        android:layout_height="47dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

</androidx.constraintlayout.widget.ConstraintLayout>